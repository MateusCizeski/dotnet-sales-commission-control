@page
@model Front.Pages.Comissoes.IndexModel
@{
    ViewData["Title"] = "Comissões";
}

<h1>Comissões</h1>

<form method="get" class="mb-3 row g-2 align-items-end">
    <div class="col-md-2">
        <select name="status" class="form-select">
            <option value="">Todos</option>
            <option value="Pendente" selected="@(Model.FiltroStatus == "Pendente")">
                Pendentes
            </option>
            <option value="Paga" selected="@(Model.FiltroStatus == "Paga")">
                Pagas
            </option>
            <option value="Cancelada" selected="@(Model.FiltroStatus == "Cancelada")">
                Canceladas
            </option>
        </select>
    </div>

    <div class="col-md-2">
        <label>Itens por página</label>
        <select name="PageSize" class="form-select">
            @foreach (var size in new int[] { 5, 10, 25, 50 })
            {
                if (Model.PageSize == size)
                {
                    <option value="@size" selected="selected">@size</option>
                }
                else
                {
                    <option value="@size">@size</option>
                }
            }
        </select>
    </div>

    <div class="col-md-2 align-self-end">
        <button class="btn btn-primary">Pesquisar</button>
    </div>

    <div class="col-md-6 d-flex justify-content-end gap-2 align-items-end">
        <a asp-page-handler="ExportExcel" class="btn btn-outline-success">Exportar Excel</a>
        <a asp-page-handler="ExportPdf" class="btn btn-outline-danger">Exportar PDF</a>
    </div>
</form>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Invoice</th>
            <th>Vendedor</th>
            <th>Valor Base</th>
            <th>%</th>
            <th>Valor Comissão</th>
            <th>Status</th>
            <th>Data Cálculo</th>
            <th>Data Pagamento</th>
            <th style="width:220px">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model.Comissoes)
        {
            <tr>
                <td>@c.InvoiceNumero</td>
                <td>@c.VendedorNome</td>
                <td>@c.ValorBase.ToString("C")</td>
                <td>@c.PercentualAplicado</td>
                <td>@c.ValorComissao.ToString("C")</td>
                <td>@c.Status</td>
                <td>@c.DataCalculo.ToShortDateString()</td>
                <td>@(c.DataPagamento?.ToShortDateString() ?? "-")</td>
                <td class="d-flex gap-1 align-items-center">
                    @if (c.Status == Domain.Enums.StatusComissao.Pendente)
                    {
                        <form method="post"
                              asp-page-handler="Pagar"
                              asp-route-id="@c.Id">
                            <button class="btn btn-sm btn-success">
                                Pagar
                            </button>
                        </form>

                        <form method="post"
                              asp-page-handler="Cancelar"
                              asp-route-id="@c.Id">
                            <button class="btn btn-sm btn-danger">
                                Cancelar
                            </button>
                        </form>
                    }
                    else if (c.Status == Domain.Enums.StatusComissao.Paga)
                    {
                        <span class="badge bg-success">Paga</span>
                    }
                    else if (c.Status == Domain.Enums.StatusComissao.Cancelada)
                    {
                        <span class="badge bg-secondary">Cancelada</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="col-md-8 align-self-end">
    @{
        var previousPage = Model.CurrentPage > 1 ? Model.CurrentPage - 1 : 1;
        var nextPage = Model.CurrentPage < Model.TotalPages ? Model.CurrentPage + 1 : Model.TotalPages;
    }

    <nav aria-label="Paginação" class="mt-3">
        <ul class="pagination justify-content-end mb-0">
            <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-page="/Comissoes/Index"
                   asp-route-CurrentPage="@previousPage"
                   asp-route-PageSize="@Model.PageSize"
                   asp-route-FilterVendedorId="@Model.FilterVendedorId">
                    Anterior
                </a>
            </li>

            <li class="page-item disabled">
                <span class="page-link">
                    Página @Model.CurrentPage de @Model.TotalPages
                </span>
            </li>

            <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-page="/Comissoes/Index"
                   asp-route-CurrentPage="@nextPage"
                   asp-route-PageSize="@Model.PageSize"
                   asp-route-FilterVendedorId="@Model.FilterVendedorId">
                    Próxima
                </a>
            </li>
        </ul>
    </nav>
</div>
