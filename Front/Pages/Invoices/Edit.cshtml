@page "{id:guid}"
@model Front.Pages.Invoices.EditModel

<h1>Editar Invoice</h1>

<form method="post" class="col-md-6">
    
    <div asp-validation-summary="All" class="text-danger mb-3"></div>
    
    <input type="hidden" asp-for="Invoice.Id" />

    <div class="mb-3">
        <label class="form-label">Vendedor</label>
        <select asp-for="Invoice.VendedorId"
                asp-items="Model.Vendedores"
                class="form-select">
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Valor</label>
        <input asp-for="Invoice.ValorTotal"
               class="form-control"
               type="number"
               step="0.01" />
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>
