@page
@model Front.Pages.Invoices.IndexModel
@{
    ViewData["Title"] = "Invoices";
}

<h1>Invoices</h1>

<a asp-page="Create" class="btn btn-success mb-3">Nova Invoice</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Número</th>
            <th>Vendedor</th>
            <th>Cliente</th>
            <th>Valor</th>
            <th>Status</th>
            <th>Emissão</th>
            <th style="width:260px">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var invoice in Model.Invoices)
        {
            <tr>
                <td>@invoice.NumeroInvoice</td>
                <td>@invoice.Vendedor.NomeCompleto</td>
                <td>@invoice.Cliente</td>
                <td>@invoice.ValorTotal.ToString("C")</td>
                <td>@invoice.Status</td>
                <td>@invoice.DataEmissao.ToShortDateString()</td>
                <td class="d-flex gap-1">
                    <a asp-page="Edit" asp-route-id="@invoice.Id"
                       class="btn btn-sm btn-primary">
                        Editar
                    </a>

                    @if (invoice.Status == Domain.Enums.StatusInvoice.Pendente)
                    {
                        <form method="post" asp-page-handler="Aprovar"
                              asp-route-id="@invoice.Id">
                            <button class="btn btn-sm btn-success">
                                Aprovar
                            </button>
                        </form>

                        <form method="post" asp-page-handler="Cancelar"
                              asp-route-id="@invoice.Id">
                            <button class="btn btn-sm btn-danger">
                                Cancelar
                            </button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
