@page
@model Front.Pages.Invoices.IndexModel
@{
    ViewData["Title"] = "Invoices";
}

<h1>Invoices</h1>

<a asp-page="Create" class="btn btn-success mb-3">Nova Invoice</a>

<form method="get" class="mb-3 row g-2 align-items-end">
    <div class="col-md-4">
        <label>Vendedor</label>
        <select name="FilterVendedorId" class="form-select">
            <option value="">Todos</option>
            @foreach (var v in Model.Vendedores)
            {
                if (Model.FilterVendedorId == v.Id)
                {
                    <option value="@v.Id" selected="selected">@v.NomeCompleto</option>
                }
                else
                {
                    <option value="@v.Id">@v.NomeCompleto</option>
                }
            }
        </select>
    </div>

    <div class="col-md-2">
        <label>Itens por página</label>
        <select name="PageSize" class="form-select">
            @foreach (var size in new int[] { 5, 10, 25, 50 })
            {
                if (Model.PageSize == size)
                {
                    <option value="@size" selected="selected">@size</option>
                }
                else
                {
                    <option value="@size">@size</option>
                }
            }
        </select>
    </div>

    <div class="col-md-2 align-self-end">
        <button class="btn btn-primary">Pesquisar</button>
    </div>

    <div class="col d-flex justify-content-end align-items-end">
        <a asp-page-handler="ExportExcel"
           asp-route-FilterVendedorId="@Model.FilterVendedorId"
           asp-route-currentPage="@Model.CurrentPage"
           asp-route-pageSize="@Model.PageSize"
           class="btn btn-outline-success me-2">
            Exportar Excel
        </a>
        <a asp-page-handler="ExportPdf"
           asp-route-FilterVendedorId="@Model.FilterVendedorId"
           asp-route-currentPage="@Model.CurrentPage"
           asp-route-pageSize="@Model.PageSize"
           class="btn btn-outline-danger">
            Exportar PDF
        </a>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Número</th>
            <th>Vendedor</th>
            <th>Cliente</th>
            <th>Valor</th>
            <th>Status</th>
            <th>Emissão</th>
            <th style="width:260px">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var invoice in Model.Invoices)
        {
            <tr>
                <td>@invoice.NumeroInvoice</td>
                <td>@invoice.Vendedor.NomeCompleto</td>
                <td>@invoice.Cliente</td>
                <td>@invoice.ValorTotal.ToString("C")</td>
                <td>@invoice.Status</td>
                <td>@invoice.DataEmissao.ToShortDateString()</td>
                <td class="d-flex gap-1">
                    <a asp-page="Edit" asp-route-id="@invoice.Id" class="btn btn-sm btn-primary">Editar</a>

                    @if (invoice.Status == Domain.Enums.StatusInvoice.Pendente)
                    {
                        <form method="post" asp-page-handler="Aprovar" asp-route-id="@invoice.Id">
                            <button class="btn btn-sm btn-success">Aprovar</button>
                        </form>

                        <form method="post" asp-page-handler="Cancelar" asp-route-id="@invoice.Id">
                            <button class="btn btn-sm btn-danger">Cancelar</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="col-md-8 align-self-end">
    @{
        var previousPage = Model.CurrentPage > 1 ? Model.CurrentPage - 1 : 1;
        var nextPage = Model.CurrentPage < Model.TotalPages ? Model.CurrentPage + 1 : Model.TotalPages;
    }

    <nav aria-label="Paginação" class="mt-3">
        <ul class="pagination justify-content-end mb-0">
            <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-page="/Invoices/Index"
                   asp-route-CurrentPage="@previousPage"
                   asp-route-PageSize="@Model.PageSize"
                   asp-route-FilterVendedorId="@Model.FilterVendedorId">
                    Anterior
                </a>
            </li>

            <li class="page-item disabled">
                <span class="page-link">
                    Página @Model.CurrentPage de @Model.TotalPages
                </span>
            </li>

            <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-page="/Invoices/Index"
                   asp-route-CurrentPage="@nextPage"
                   asp-route-PageSize="@Model.PageSize"
                   asp-route-FilterVendedorId="@Model.FilterVendedorId">
                    Próxima
                </a>
            </li>
        </ul>
    </nav>
</div>
