@page
@model Front.Pages.Vendedores.IndexModel
@{
    ViewData["Title"] = "Vendedores";
}

<h1>Vendedores</h1>

<a asp-page="Create" class="btn btn-success mb-3">Novo Vendedor</a>


<form method="get" class="mb-3 row g-2 align-items-end">
    <div class="col-md-2">
        <select name="ativo" class="form-select">
            <option value="">Todos</option>
            <option value="true" selected="@(Model.FiltroAtivo == true)">Ativos</option>
            <option value="false" selected="@(Model.FiltroAtivo == false)">Inativos</option>
        </select>
    </div>

    <div class="col-md-2">
        <label>Itens por página</label>
        <select name="PageSize" class="form-select">
            @foreach (var size in new int[] { 5, 10, 25, 50 })
            {
                if (Model.PageSize == size)
                {
                    <option value="@size" selected="selected">@size</option>
                }
                else
                {
                    <option value="@size">@size</option>
                }
            }
        </select>
    </div>

    <div class="col-md-2 align-self-end">
        <button class="btn btn-primary">Pesquisar</button>
    </div>

    <div class="col d-flex justify-content-end align-items-end">
        <a asp-page-handler="ExportExcel" class="btn btn-outline-success me-2">Exportar Excel</a>
        <a asp-page-handler="ExportPdf" class="btn btn-outline-danger">Exportar PDF</a>
    </div>
</form>


@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger">@TempData["MensagemErro"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>CPF</th>
            <th>Email</th>
            <th>% Comissão</th>
            <th>Status</th>
            <th style="width: 220px">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model.Vendedores)
        {
            <tr>
                <td>@v.Nome</td>
                <td>@v.Documento</td>
                <td>@v.Email</td>
                <td>@v.PercentualComissao</td>
                <td>@(v.Ativo ? "Ativo" : "Inativo")</td>
                <td class="d-flex gap-1">
                    <a asp-page="Edit" asp-route-id="@v.Id" class="btn btn-sm btn-primary">Editar</a>

                    @if (v.Ativo)
                    {
                        <form method="post" asp-page-handler="Inativar" asp-route-id="@v.Id" onsubmit="return confirm('Tem certeza que deseja inativar?');">
                            <button class="btn btn-sm btn-warning">Inativar</button>
                        </form>
                    }
                    else
                    {
                        <form method="post" asp-page-handler="Ativar" asp-route-id="@v.Id" onsubmit="return confirm('Tem certeza que deseja ativar?');">
                            <button class="btn btn-sm btn-success">Ativar</button>
                        </form>
                    }

                    <form method="post" asp-page-handler="Remover" asp-route-id="@v.Id" onsubmit="return confirm('Tem certeza que deseja remover?');">
                        <button class="btn btn-sm btn-danger">Remover</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="col-md-8 align-self-end">
    @{
        var previousPage = Model.CurrentPage > 1 ? Model.CurrentPage - 1 : 1;
        var nextPage = Model.CurrentPage < Model.TotalPages ? Model.CurrentPage + 1 : Model.TotalPages;
    }

    <nav aria-label="Paginação" class="mt-3">
        <ul class="pagination justify-content-end mb-0">
            <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-page="/Vendedores/Index"
                   asp-route-CurrentPage="@previousPage"
                   asp-route-PageSize="@Model.PageSize">
                    Anterior
                </a>
            </li>

            <li class="page-item disabled">
                <span class="page-link">
                    Página @Model.CurrentPage de @Model.TotalPages
                </span>
            </li>

            <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-page="/Vendedores/Index"
                   asp-route-CurrentPage="@nextPage"
                   asp-route-PageSize="@Model.PageSize">
                    Próxima
                </a>
            </li>
        </ul>
    </nav>
</div>
