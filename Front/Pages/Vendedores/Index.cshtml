@page
@model Front.Pages.Vendedores.IndexModel
@{
    ViewData["Title"] = "Vendedores";
}

<h1>Vendedores</h1>

<div class="mb-3 d-flex gap-2">
    <a asp-page="Create" class="btn btn-success">Novo Vendedor</a>

    <form method="get" class="d-flex gap-2">
        <select name="ativo" class="form-select">
            <option value="">Todos</option>
            <option value="true" selected="@(Model.FiltroAtivo == true)">Ativos</option>
            <option value="false" selected="@(Model.FiltroAtivo == false)">Inativos</option>
        </select>
        <button class="btn btn-outline-primary">Filtrar</button>
    </form>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>CPF</th>
            <th>Email</th>
            <th>% Comissão</th>
            <th>Status</th>
            <th style="width: 220px">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model.Vendedores)
        {
            <tr>
                <td>@v.Nome</td>
                <td>@v.Documento</td>
                <td>@v.Email</td>
                <td>@v.PercentualComissao</td>
                <td>@(v.Ativo ? "Ativo" : "Inativo")</td>
                <td class="d-flex gap-1">
                    <a asp-page="Edit" asp-route-id="@v.Id" class="btn btn-sm btn-primary">
                        Editar
                    </a>

                    @if (v.Ativo)
                    {
                        <form method="post" asp-page-handler="Inativar" asp-route-id="@v.Id">
                            <button class="btn btn-sm btn-warning">Inativar</button>
                        </form>
                    }
                    else
                    {
                        <form method="post" asp-page-handler="Ativar" asp-route-id="@v.Id">
                            <button class="btn btn-sm btn-success">Ativar</button>
                        </form>
                    }

                    <form method="post" asp-page-handler="Remover" asp-route-id="@v.Id">
                        <button class="btn btn-sm btn-danger">Remover</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
